<%-  include("partials/head") %>

  <body class="bg-gray-50 text-gray-900 font-sans">

    <!-- Header -->
    <%- include("partials/nav") %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto mt-10 p-4">
      <div class="max-w-7xl mx-auto">
        <h1 class="text-3xl font-bold text-red-600 text-center mb-4">Welcome to Airbnb</h1>
        <h2 class="text-xl font-mono text-gray-600 mb-6">Registered Homes are listed below:</h2>
        
        <!--This coode is working as userRouter is rendering registeredHomes and the objects accessing with home is displaying bcz hostRouter is pushing data in registeredHomes-->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-24">
          <% registeredHomes.forEach(function(home) { %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition duration-300 w-80 mx-auto">
              <div class="h-48 w-full overflow-hidden rounded-t-xl">
                <% if (home.photoUrl) { %>
                  <img src="/uploads/<%= home.photoUrl %>" alt="Home Image" class="h-full w-full object-cover" />
                <% } else { %>
                  <div class="h-full w-full bg-gray-200 flex items-center justify-center text-gray-500">No Image</div>
                <% } %>
              </div>
              
              <div class="p-4">
                <h3 class="text-xl font-bold text-gray-800 mb-1"><%= home.houseName %></h3>
                <p class="text-gray-600 text-sm mb-1">üìç <%= home.location %></p>
                <p class="text-gray-600 text-sm mb-1">‚≠ê <%= home.rating %></p>
                <p class="text-lg font-semibold text-red-600">‚Çπ <%= home.price %> / night</p>
              </div>
        
              <div class="px-4 pb-4 text-right">
                <a href="/homes/<%= home.id %>" class="inline-block bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition">View Details</a>
              </div>
            </div>
          <% }); %>
        </div>
        
      </div>
    </main>

  </body>
</html>



